<h2>
  <a href="/"> Inicio </a> -
  <a href="/appartments/liked"> Pre-Aprobados </a> -
  <a href="/appartments/rejected"> Rechazados </a> -
  <a href="/appartments/sold"> Vendidos </a>
</h2>

<h1>Departamentos</h1>

<table class="table">
  <thead>
    <tr style="cursor: pointer;">
      <th>#</th>
      <th onclick="window.location.href = '/appartments/analysis?order_by=commune';">Comuna</th>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=cost';">Precio</th><% end %>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=common_expenses';">Gastos comunes</th><% end %>
      <th onclick="window.location.href = '/appartments/analysis?order_by=total_cost';">Costo total</th>
      <th onclick="window.location.href = '/appartments/analysis?order_by=bedrooms';">Dormitorios</th>
      <th onclick="window.location.href = '/appartments/analysis?order_by=bathrooms';">Ba√±os</th>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=floor';">Piso</th><% end %>
      <th onclick="window.location.href = '/appartments/analysis?order_by=orientation';">Orientacion</th>
      <th onclick="window.location.href = '/appartments/analysis?order_by=useful_surface';">Superficie util</th>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=total_surface';">Superficie total</th><% end %>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=duplex';">Duplex</th><% end %>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=walk_in_closet';">Walkin closet</th><% end %>
      <% if device != "mobile" %><th onclick="window.location.href = '/appartments/analysis?order_by=published';">Fecha de publicacion</th><% end %>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody style="text-align: center;">
    <% for i in 0..@appartments.length-1 do %>
      <tr onmouseover="this.style.backgroundColor='antiquewhite';" onmouseout="this.style.backgroundColor='white';">
        <td> <%= i + 1 %> </td>
        <td><%= @appartments[i].commune %></td>
        <% if device != "mobile" %><td><%= @appartments[i].cost %></td><% end %>
        <% if device != "mobile" %><td><%= @appartments[i].common_expenses %></td><% end %>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @best_total_cost,
              @worst_total_cost,
              @appartments[i].cost + (@appartments[i].common_expenses || 0)
            ) %>"
        >
          <%= @appartments[i].cost + (@appartments[i].common_expenses || 0) %>
        </td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @worst_bedrooms,
              @best_bedrooms,
              @appartments[i].bedrooms
            ) %>"
        ><%= @appartments[i].bedrooms %></td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @worst_bathrooms,
              @best_bathrooms,
              @appartments[i].bathrooms
            ) %>"
        ><%= @appartments[i].bathrooms %></td>
        <% if device != "mobile" %><td><%= @appartments[i].floor %></td><% end %>
        <td><%= @appartments[i].orientation %></td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @worst_useful_surface,
              @best_useful_surface,
              @appartments[i].useful_surface
            ) %>"
        ><%= @appartments[i].useful_surface %></td>
        <% if device != "mobile" %><td><%= @appartments[i].total_surface %></td><% end %>
        <% if device != "mobile" %><td <% if @appartments[i].duplex %> style="background-color: rgb(87, 187, 138)"<% end %>><%= @appartments[i].duplex %></td><% end %>
        <% if device != "mobile" %><td <% if @appartments[i].walk_in_closet %> style="background-color: rgb(87, 187, 138)"<% end %>><%= @appartments[i].walk_in_closet %></td><% end %>
        <% if device != "mobile" %><td><%= @appartments[i].published %></td><% end %>
        <td>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#appartmentModal<%= @appartments[i].id %>"
            style="font-size: small;"
          >
            Ver <br /> Departamento
          </button>
        </td>
        <td>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#visitCommentModal<%= @appartments[i].id %>"
            style="font-size: small;"
          >
            Ver <br /> Comentarios
          </button>
        </td>
      </tr>
      <%= render 'modals', appartment: @appartments[i], i: i+1 %>
    <% end %>
  </tbody>
</table>
