<p id="notice"><%= notice %></p>
<h2>
  <a href="/"> Inicio </a> -
  <a href="/appartments/analysis"> Analizar </a> -
  <a href="/appartments/liked"> Pre-Aprobados </a> -
  <a href="/appartments/rejected"> Rechazados </a>
</h2>

<h1>Departamentos</h1>

<table class="table">
  <thead>
    <tr style="cursor: pointer;">
      <th>#</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=commune';">Comuna</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=total_cost';">Costo total</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=bedrooms';">Dormitorios</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=bathrooms';">Baños</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=orientation';">Orientacion</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=useful_surface';">Superficie útil</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=like_jorge';">Like Jorge</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=like_mayra';">Like Mayra</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=published';">Fecha de publicación</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=sold_date';">Fecha venta</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=duration';">Duración (dias)</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=published';">Rechazado</th>
      <th onclick="window.location.href = '/appartments/sold?order_by=published';">Razon rechazo</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody style="text-align: center;">
    <% for i in 0..@appartments.length-1 do %>
      <tr onmouseover="this.style.backgroundColor='antiquewhite';" onmouseout="this.style.backgroundColor='white';">
        <td> <%= i + 1 %> </td>
        <td><%= @appartments[i].commune %></td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @best_total_cost,
              @worst_total_cost,
              @appartments[i].cost + (@appartments[i].common_expenses || 0)
            ) %>"
        >
          <%= @appartments[i].cost + (@appartments[i].common_expenses || 0) %>
        </td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @worst_bedrooms,
              @best_bedrooms,
              @appartments[i].bedrooms
            ) %>"
        ><%= @appartments[i].bedrooms %></td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @worst_bathrooms,
              @best_bathrooms,
              @appartments[i].bathrooms
            ) %>"
        ><%= @appartments[i].bathrooms %></td>
        <td><%= @appartments[i].orientation %></td>
        <td
          style="background-color:
            <%=Appartment.set_color(
              @worst_useful_surface,
              @best_useful_surface,
              @appartments[i].useful_surface
            ) %>"
        ><%= @appartments[i].useful_surface %></td>
        <td><%= @appartments[i].like_jorge %></td>
        <td><%= @appartments[i].like_mayra %></td>
        <td><%= @appartments[i].published %></td>
        <td><%= @appartments[i].sold_date %></td>
        <td><%= (@appartments[i].sold_date.to_time.to_i - @appartments[i].published.to_time.to_i)/60/60/24 %></td>
        <td><%= @appartments[i].rejected %></td>
        <td><%= @appartments[i].reject_reason %></td>
        <td>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#appartmentModal<%= @appartments[i].id %>"
            style="font-size: small;"
          >
            Ver <br /> Departamento
          </button>
        </td>
        <td>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#visitCommentModal<%= @appartments[i].id %>"
            style="font-size: small;"
          >
            Ver <br /> Comentarios
          </button>
        </td>
      </tr>
      <%= render 'modals', appartment: @appartments[i], i: i+1 %>
    <% end %>
  </tbody>
</table>
